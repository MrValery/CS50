#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int height;
    do 
    {
        height = get_int("Please enter a valid height from 1 to 8:");
        printf("You entered the height of %i\n", height);
    }
    while (height < 1 || height > 8);
    printf("You entered a valid height of %i\n", height);

    int i;
    int line = 1;
    int j;
    do 
    {
        
        for (j=height; j > line; j--)
        {
            printf(".");
        }        
        
        for (i=0; i < line; i++)
        {
            printf("#");
        }

        printf("\n");
        line++;
    }
    while (line <= height);

}
